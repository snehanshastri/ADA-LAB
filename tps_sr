// Online C compiler to run C program online
#include <stdio.h>

int t[10];
int indegree[10];
int st[10];
int top = -1;

void tps_sr(int[][10], int);

int main() {
    int n, i, j;
    printf("Enter no.of nodes:\n");
    scanf("%d", &n);
    int a[n][n];
    printf("Enter adjacency matrix:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &a[i][j]);
        }
    }
    tps_sr(a, n);
    printf("Topologically sorted array is:\n");
    for (int i = n - 1; i >= 0; i--)
        printf("%d\t", t[i]);

    printf("\n");
    return 0;
}

void tps_sr(int a[][10], int n) {
    int j, i, sum;
    for (j = 0; j < n; j++) {
        sum = 0;
        for (i = 0; i < n; i++) {
            sum = sum + a[i][j];
        }
        indegree[j] = sum;
    }

    int x = 0;
    for (i = 0; i < n; i++) {
        if (indegree[i] == 0) {
            top++;
            st[top] = i;
        }
    }

    while (top != -1) {
        int u = st[top--];
        t[x++] = u;

        for (int v = 0; v < n; v++) {
            if (a[u][v] == 1 && indegree[v] != 0) {
                indegree[v]--;
                if (indegree[v] == 0)
                    st[++top] = v;
            }
        }
    }
}






